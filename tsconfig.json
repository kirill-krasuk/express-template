{
    "compilerOptions": {
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": "src",
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
    
        "strict": true,
    
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,

