		// 	"@ui-kit/*": ["src/ui-kit/*"],
		// 	"@images/*": ["src/assets/images/*"],
        //     "@svgs/*": ["src/assets/svgs/*"],
		// 	"@server/*": ["server/*"],
		// 	"@public/*": ["public/*"], 
		// 	"@fonts/*": ["src/assets/fonts/*"],
		// 	"@test/*": ["src/test/*"],
        // },
    
        "esModuleInterop": true
    },
    "include": ["app/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
